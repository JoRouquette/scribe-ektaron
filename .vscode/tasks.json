{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: dev up",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "-f",
        "docker-compose.yml",
        "-f",
        "docker-compose.dev.yml",
        "up",
        "--build",
        "-d",
        "--remove-orphans",
        "--force-recreate"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Docker: dev down",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "-f", "docker-compose.yml", "-f", "docker-compose.dev.yml", "down", "-v"],
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Launch site",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "serve", "site"],
      "problemMatcher": []
    },
    {
      "label": "Launch node",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "serve", "node"],
      "problemMatcher": []
    },
    {
      "label": "Launch all",
      "dependsOn": ["Launch site", "Launch node"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Plugin: dev (watch)",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run", "publish-to-personal-vps:dev"],
      "problemMatcher": []
    },
    {
      "label": "Plugin: build",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run", "publish-to-personal-vps:build"],
      "problemMatcher": []
    },
    {
      "label": "Plugin: package",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run", "publish-to-personal-vps:package"],
      "dependsOn": ["Plugin: build"],
      "problemMatcher": []
    }
  ]
}
