{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@core-domain": ["libs/core-domain/src/index.ts"],
      "@core-domain/*": ["libs/core-domain/src/lib/*"],
      "@core-application": ["libs/core-application/src/index.ts"],
      "@core-application/*": ["libs/core-application/src/lib/*"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp", "dist"],
  "include": ["apps/**/*.ts", "libs/**/*.ts"]
}
