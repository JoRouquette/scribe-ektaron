{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: dev up",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "-f",
        "docker-compose.yml",
        "-f",
        "docker-compose.dev.yml",
        "up",
        "--build",
        "-d",
        "--remove-orphans",
        "--force-recreate"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Docker: dev down",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "-f", "docker-compose.yml", "-f", "docker-compose.dev.yml", "down", "-v"],
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Launch site",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "serve", "site"],
      "problemMatcher": []
    },
    {
      "label": "Launch node",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "serve", "node"],
      "problemMatcher": []
    },
    {
      "label": "Launch all",
      "dependsOn": ["Launch site", "Launch node"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Plugin: dev (watch)",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run", "obsidian-vps-publish:dev"],
      "problemMatcher": []
    },
    {
      "label": "Plugin: build",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run", "obsidian-vps-publish:build", "--tui false"],
      "problemMatcher": []
    },
    {
      "label": "Plugin: package",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run", "obsidian-vps-publish:package", "--tui false"],
      "dependsOn": ["Plugin: build"],
      "problemMatcher": []
    },
    {
      "label": "Build all",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run-many", "--target=build", "--all"],
      "problemMatcher": []
    },
    {
      "label": "Lint all",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run-many", "--target=lint", "--all"],
      "problemMatcher": []
    },
    {
      "label": "Test all",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run-many", "--target=test", "--all", "--code-coverage"],
      "problemMatcher": []
    },
    {
      "label": "Format all",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run-many", "--target=format", "--all", "--check"],
      "problemMatcher": []
    },
    {
      "label": "Merge current branch to release",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "CURRENT_BRANCH=$(git branch --show-current) && git checkout release && git pull origin release && git merge --no-ff $CURRENT_BRANCH && git push origin release"
      ],
      "problemMatcher": []
    },
    {
      "label": "Merge release on main",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "git checkout main && git pull origin main && git merge --no-ff release && git push origin main"
      ],
      "problemMatcher": []
    }
  ]
}
