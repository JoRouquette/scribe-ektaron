{
  "name": "obsidian-vps-publish",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/obsidian-vps-publish/src",
  "projectType": "application",
  "tags": ["layer:application", "type:plugin"],
  "targets": {
    "dev": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{workspaceRoot}/dist/apps/obsidian-vps-publish"],
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/obsidian-vps-publish",
        "format": ["cjs"],
        "bundle": true,
        "main": "apps/obsidian-vps-publish/src/main.ts",
        "tsConfig": "apps/obsidian-vps-publish/tsconfig.json",
        "assets": [
          "manifest.json",
          "apps/obsidian-vps-publish/versions.json",
          "apps/obsidian-vps-publish/styles.css"
        ],
        "external": [
          "obsidian",
          "electron",
          "@codemirror/autocomplete",
          "@codemirror/collab",
          "@codemirror/commands",
          "@codemirror/language",
          "@codemirror/lint",
          "@codemirror/search",
          "@codemirror/state",
          "@codemirror/view",
          "@lezer/common",
          "@lezer/highlight",
          "@lezer/lr"
        ],
        "esbuildOptions": {
          "target": "es2018",
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{workspaceRoot}/dist/apps/obsidian-vps-publish"],
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/obsidian-vps-publish",
        "format": ["cjs"],
        "bundle": true,
        "main": "apps/obsidian-vps-publish/src/main.ts",
        "tsConfig": "apps/obsidian-vps-publish/tsconfig.json",
        "assets": [
          "manifest.json",
          "apps/obsidian-vps-publish/versions.json",
          "apps/obsidian-vps-publish/styles.css"
        ],
        "external": [
          "obsidian",
          "electron",
          "@codemirror/autocomplete",
          "@codemirror/collab",
          "@codemirror/commands",
          "@codemirror/language",
          "@codemirror/lint",
          "@codemirror/search",
          "@codemirror/state",
          "@codemirror/view",
          "@lezer/common",
          "@lezer/highlight",
          "@lezer/lr"
        ],
        "esbuildOptions": {
          "target": "es2018",
          "sourcemap": false,
          "outExtension": {
            ".js": ".js"
          }
        }
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "outputs": ["{workspaceRoot}/dist/vps-publish"],
      "options": {
        "command": "node -e \"const fs=require('fs');const path=require('path');const root=process.cwd();const manifest=JSON.parse(fs.readFileSync(path.join(root,'manifest.json'),'utf8'));const id=manifest.id;const buildDir=path.join(root,'dist','apps','obsidian-vps-publish');const outDir=path.join(root,'dist',id);const ensure=(p,n)=>{if(!fs.existsSync(p)) throw new Error(`${n} not found: ${p}`)};const main=path.join(buildDir,'main.js');ensure(main,'main.js');fs.rmSync(outDir,{recursive:true,force:true});fs.mkdirSync(outDir,{recursive:true});fs.copyFileSync(main,path.join(outDir,'main.js'));fs.copyFileSync(path.join(root,'manifest.json'),path.join(outDir,'manifest.json'));const styles=path.join(root,'apps','obsidian-vps-publish','styles.css');if(fs.existsSync(styles)) fs.copyFileSync(styles,path.join(outDir,'styles.css'));const versions=path.join(root,'apps','obsidian-vps-publish','versions.json');if(fs.existsSync(versions)) fs.copyFileSync(versions,path.join(outDir,'versions.json'));\""
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{workspaceRoot}/coverage/apps/obsidian-vps-publish"],
      "options": {
        "lintFilePatterns": ["apps/obsidian-vps-publish/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/obsidian-vps-publish"],
      "options": {
        "jestConfig": "apps/obsidian-vps-publish/jest.config.cjs",
        "runInBand": true
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prettier --check \"apps/obsidian-vps-publish/**/*.{ts,json,md,css,scss}\""
      }
    },
    "format:write": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prettier --write \"apps/obsidian-vps-publish/**/*.{ts,json,md,css,scss}\""
      }
    }
  }
}
