{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@core-domain": ["libs/core-domain/src/index.ts"],
      "@core-application": ["libs/core-application/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
